@model Login
@{
    ViewData["Title"] = "Index";
    //ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h2>Log in</h2>
            </div>
            @using (Html.BeginForm("demo", "Login")){
                <div class="card-body">
                    <form asp-controller="Login" method="post">
                        <div class="mb-3">
                            <label>Customer ID:</label>
                            <input asp-for=UserName type="text" placeholder="ID" class="form-control" name="UserName" />
                        </div>
             
                            <div class="mb-3">
                                <label>Password:</label>
                                <input asp-for=Password type="text" placeholder="password" class="form-control" name="Password" />
                                
                            </div>
                        
                    <!--<div class="mb-3">
                            
                            <input asp-for=Password class="form-control" placeholder="password" name="Password" type="password" data-val="true" data-val-length="The field Password must be a string with a minimum length of 8 chracters." data-val-length-max="60" data-val-length-min="8" data-val-required="The Password field is required." id="Password" maxlength="60" /><br />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                            -->

                        <div class="mb-3">
                            <button asp-controller="Login" asp-action="demo" type="submit" class="btn btn-primary">Log in</button>
                        </div>
                        <div class="mb-3">
                            <label>Don't have an account?</label>
                            <a asp-controller="Login" asp-action="Create" class="link-primary">
                                Join now    
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    
                </div>
            }
            <p>@ViewBag.Message</p>
            
        </div>
    </div>
</div>


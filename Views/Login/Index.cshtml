@model Login
@{
    ViewData["Title"] = "Index";
}


<h1>Index Login</h1>

<br />

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h2>Log in to Online Banking</h2>
            </div>

            <div class="card-body">
                <form asp-controller="Login" method="post">
                    <div class="mb-3">
                        <label>Customer ID:</label>
                        <input asp-for=UserName type="text" placeholder="ID" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>Password:</label>
                        <input asp-for=Password type="text" placeholder="password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button asp-controller="Home" asp-action="Index" type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
</div>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Login List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Login" asp-action="Create" class="btn btn-primary">
                Create New User
            </a>
        </div>
    </div>
    <br />

</div>

<br />
<h3><b>Forms - Form Collection Objects</b></h3>
<h4 style="color:purple">
    ID: @ViewBag.UserName<br />
    Name: @ViewBag.Password
</h4>
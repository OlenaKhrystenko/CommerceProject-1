@model IEnumerable<Fundraiser>
@{
    ViewData["Title"] = "FundraiserListView";
}

<p>Here you will see a list of fundraisers</p>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Fundraiser Title
            </th>
            <th>
                Fundraiser Description
            </th>
            <th>
                Goal
            </th>
            <th>
                Current Amount
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="30%">
                    <a asp-controller="Fundraiser" asp-action="Index" class="link-primary">
                        @obj.Title
                    </a>
                </td>
                <td width="40%">
                    @obj.Description
                </td>
                <td width="15%">
                    @obj.Goal
                </td>
                <td width="15%">
                    @obj.CurrentAmount
                </td>
            </tr>
        }
    </tbody>
</table>

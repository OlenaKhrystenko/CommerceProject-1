@model CommerceProject.Models.Fundraisers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .content {
        display: none;
    }

    .preload {
        width: 100px;
        height: 100px;
        position: absolute;
        top: 50%;
        left: 50%;
    }
</style>
<div class="preload">
    <img src="http://i.imgur.com/KUJoe.gif">
</div>
<div class="content">
    <h1>Edit</h1>
    <h4>Type</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FundraiserID" name="FundraiserID" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" id="type" class="form-control" />
                    <span asp-validation-for="Title" id="typealert" class="text-danger"></span>
                </div>
                  <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" id="type" class="form-control" />
                    <span asp-validation-for="Description" id="typealert" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Imagelink" class="control-label"></label>
                    <input asp-for="Imagelink" class="form-control" />
                    <span asp-validation-for="Imagelink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {


        $("#type").click(function () {
            $("#typealert").hide();
        });
    });
</script>
<script>
    $(function () {
        $(".preload").fadeOut(2000, function () {
            $(".content").fadeIn(1000);
        });
    });
</script>
